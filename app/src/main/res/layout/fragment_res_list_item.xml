<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResListItem">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/ivImgUsr"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="left"
                android:padding="20dp"
                android:visibility="visible" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnNameUsr"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:padding="20dp"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:text="nombre usuario"/>

                <CheckBox
                    android:id="@+id/cbMeGusta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:isScrollContainer="false"
                    android:padding="20dp" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/ivImgResidencia"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMunicipioRes"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_light"
                android:textColor="#000000"
                android:text="Municipio"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvEstadoRes"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_light"
                android:textColor="#000000"
                android:text="Estado"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvComunidadRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textColor="#000000"
            android:text="Comunidad"
            android:textSize="15sp" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:paddingLeft="10sp">

            <TableRow>
                <TextView
                    android:id="@+id/tvTipoRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:text="TipoResidencia"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tvPrecioRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:text="Precio"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</FrameLayout>