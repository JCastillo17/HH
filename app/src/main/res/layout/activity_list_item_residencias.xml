<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:id="@+id/list_iten_residencia"
    tools:context=".vistas.ListItemResidencia">
    <androidx.cardview.widget.CardView

        android:id="@+id/cvRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ivImgUsr"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:padding="5dp"
                    android:background="@drawable/img"/>


                <Button
                    android:id="@+id/btnNameUsr"
                    android:layout_width="215dp"
                    android:layout_height="25dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_black"
                    android:text="nombre usuario"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"/>
                <CheckBox
                    android:id="@+id/cbMeGusta"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:button="@drawable/checkbox_selector"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/ivImgResidencia"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/tvMunicipioRes"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:text="Municipio"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvEstadoRes"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Estado"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvComunidadRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textColor="#000000"
                android:text="Comunidad"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/tvTipoRes"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:text="TipoResidencia"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:textAlignment="textEnd"
                    android:text="$"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvPrecioRes"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:text="Precio"
                    android:textSize="15sp"/>
            </LinearLayout>

            </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>