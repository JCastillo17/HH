<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vistas.ItemsResidenciasPropias">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvResPropia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <Switch
                    android:id="@+id/swchDispRes"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="200dp"
                    android:layout_gravity="start"/>

                <Button
                    android:id="@+id/btnEdtRes"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_edit_gray"
                    android:textColor="#000000"
                    android:textSize="8sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivImgResidenciaPropia"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMunicipioResPrp"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:text="Municipio"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tvEstadoResPrp"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:text="Estado"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvComunidadResPrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textColor="#000000"
                android:text="Comunidad"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/tvTipoResPrp"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:text="TipoResidencia"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:textAlignment="textEnd"
                    android:text="$"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvPrecioResPrp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#000000"
                    android:text="Precio"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>